@page "/shifts/create"
@using HospitalManagement.BlazorServer.Models
@using HospitalManagement.BlazorServer.Services
@inject ShiftService ShiftService
@inject NavigationManager Nav

<h3>Create Shift</h3>

<EditForm Model="shift" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Doctor ID</label>
        <InputNumber @bind-Value="shift.DoctorId" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Start</label>
        <InputDate @bind-Value="shift.Start" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">End</label>
        <InputDate @bind-Value="shift.End" class="form-control" />
    </div>

    <button class="btn btn-success w-100">Create Shift</button>
</EditForm>

@code {
    Shift shift = new();

    async Task Submit()
    {
        await ShiftService.CreateShiftAsync(shift);
        Nav.NavigateTo("/shifts");
    }
}
