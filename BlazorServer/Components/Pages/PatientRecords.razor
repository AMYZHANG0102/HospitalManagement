@page "/patient-records"

@using BlazorServer.Models
@using BlazorServer.Services
@inject IPatientRecordService PatientRecordService

<h3 class="text-center mt-4">Patient Records</h3>

<div class="container mt-4">
    @if (patientRecords == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status"></div>
            <p>Loading patient records...</p>
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-info">
                <tr>
                    <th>Name</th>
                    <th>Patient ID</th>
                    <th>Diagnosis</th>
                    <th>Medications</th>
                    <th>Allergies</th>
                    <th>Blood Type</th>
                    <th>Lab Tests</th>
                    <th>Notes</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var record in patientRecords)
                {
                    <tr>
                        <td>@record.Name</td>
                        <td>@record.PatientId</td>
                        <td>@record.Diagnosis</td>
                        <td>@record.Medications</td>
                        <td>@record.MedicationAllergies</td>
                        <td>@record.BloodType</td>
                        <td>@record.LabTestsResults</td>
                        <td>@record.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private List<PatientRecord>? patientRecords;

    protected override async Task OnInitializedAsync()
    {
        patientRecords = await PatientRecordService.GetAllPatientRecordsAsync();
    }
}
